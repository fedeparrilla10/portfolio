---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="flex justify-around flex-col py-10 mt-1 md:mt-10 gap-10"
  id="home"
>
  <h1 class="font-bold text-2xl md:text-4xl text-center lg:text-left">
    {t('hero.hello')}
    <span
      class="bg-gradient-to-r from-cyan-300 to-cyan-200 text-transparent bg-clip-text tracking-wide"
      >Fede Parrilla</span
    >, <br />{t('hero.job')}
  </h1>

  <div class="flex flex-col justify-center items-center lg:flex-row gap-10">
    <div class="flex flex-col gap-6 items-center lg:items-start">
      <p>
        {t('hero.bio')}
      </p>

      <div
        class="flex flex-row w-12 gap-5 items-center justify-center lg:items-start lg:justify-start"
      >
        <a
          href="https://github.com/fedeparrilla10"
          target="_blank"
          aria-label="GitHub"
        >
          <i class="fa-brands fa-github text-[2.7rem]"></i>
        </a>
        <a
          href="https://www.linkedin.com/in/fedeparrilla/"
          target="_blank"
          aria-label="LinkedIn"
        >
          <i class="fa-brands fa-linkedin text-[2.7rem]"></i>
        </a>
        <a
          href={lang === 'en'
            ? '/portfolio/FedeParrillaENG.pdf'
            : '/portfolio/FedeParrillaESP.pdf'}
          target="_blank"
          aria-label="CV"
        >
          <i class="fa-solid fa-file-contract text-[2.7rem]"></i>
        </a>
      </div>
    </div>
    <img
      src="/portfolio/mainimg.webp"
      alt=""
      class="rounded-full h-52 w-52 md:h-64 md:w-64"
    />
  </div>
</section>
