---
import Image from 'astro/components/Image.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { externalLinks } from '../data/external';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { cv, rrss } = externalLinks;
---

<section
  class="flex justify-around flex-col py-10 mt-1 md:mt-10 gap-8 lg:gap-5"
  id="home"
>
  <h1 class="font-bold text-2xl md:text-4xl text-center lg:text-left">
    {t('hero.hello')}
    <span
      class="bg-gradient-to-r from-cyan-300 to-cyan-200 text-transparent bg-clip-text"
      >Fede Parrilla</span
    >, <br />{t('hero.job')}
  </h1>

  <div class="flex flex-col justify-center items-center lg:flex-row gap-10">
    <div class="flex flex-col gap-6 items-center lg:items-start">
      <p>
        {t('hero.bio')}
      </p>

      <div
        class="flex flex-row gap-5 items-center justify-center lg:items-start lg:justify-start"
      >
        {
          rrss.map((rrss) => {
            return (
              <a href={rrss.link} target="_blank" aria-label={rrss.name}>
                <Image src={rrss.icon} alt={rrss.name} width={48} height={48} />
              </a>
            );
          })
        }
        <a
          href={lang === 'en'
            ? '/portfolio/FedeParrillaENG.pdf'
            : '/portfolio/FedeParrillaESP.pdf'}
          target="_blank"
          aria-label={cv.name}
        >
          <Image src={cv.icon} alt={cv.name} width={48} height={48} />
        </a>
      </div>
    </div>
    <Image
      src="/portfolio/mainimg.webp"
      alt="Fede Parrilla"
      width={256}
      height={256}
      class="rounded-full"
    />
  </div>
</section>
