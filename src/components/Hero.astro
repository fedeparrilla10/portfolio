---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="flex justify-around flex-col py-10 mt-1 md:mt-10 gap-10"
  id="home"
>
  <h1 class="font-bold text-2xl xl:text-4xl text-center lg:text-left">
    {t('hero.hello')}
    <span
      class="bg-gradient-to-r from-cyan-100 to-cyan-400 text-transparent bg-clip-text tracking-wide"
      >Fede Parrilla</span
    >, <br />{t('hero.job')}
  </h1>

  <div class="flex flex-col justify-center items-center lg:flex-row gap-10">
    <div class="flex flex-col gap-6 items-center lg:items-start">
      <p>
        {t('hero.bio')}
      </p>

      <div
        class="flex flex-row w-12 gap-4 items-center justify-center lg:items-start lg:justify-start"
      >
        <i class="fa-brands fa-github text-[2.7rem]"></i>
        <i class="fa-brands fa-linkedin text-[2.7rem]"></i>
        <i class="fa-regular fa-file text-[2.7rem]"></i>
      </div>
    </div>
    <img
      src="/portfolio/mainimg.jpg"
      alt=""
      class="rounded-full h-52 w-52 md:h-64 md:w-64"
    />
  </div>
</section>
