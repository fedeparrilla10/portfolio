---
import Image from 'astro/components/Image.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { allProjects } from '../data/projects.js';
import ProjectsIcon from '../../public/icons/rocket.svg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const linkButtons = [
  {
    name: 'Preview',
    src: '/icons/link.svg',
  },
  {
    name: 'Code',
    src: '/icons/code.svg',
  },
];
---

<section class="pt-10 mb-10 flex flex-col gap-12" id="projects">
  <div class="flex items-center gap-4">
    <Image src={ProjectsIcon} alt={t('projects.title')} class="w-8 h-8" />
    <h2
      class="font-semibold text-xl sectionTitleColor text-center lg:text-start pb-2"
    >
      {t('projects.title')}
    </h2>
  </div>

  <article class="flex gap-3 flex-wrap">
    {
      allProjects.map((project) => (
        <>
          <div class="max-w-[27rem] whitespace-normal break-words rounded-lg primaryColor bg-transparent px-4 font-sans text-sm font-normal text-blue-gray-500 shadow-lg shadow-blue-gray-500/10 focus:outline-none">
            <div class="mb-2 flex items-center gap-3">
              <a
                href={project.preview}
                class="block font-sans text-base font-medium leading-relaxed tracking-normal antialiased transition-colors hover:text-[#71F9CE]"
                target="_blank"
              >
                {project.name}
              </a>
              <Image
                src={project.icon}
                alt={project.name}
                width={20}
                height={20}
              />
            </div>
            <p class="block font-sans text-sm font-normal leading-normal antialiased">
              {lang === 'en' ? project.description_en : project.description_es}
            </p>
            <div class="mt-4 flex items-center gap-2">
              {project.tech.map((tech) => {
                return (
                  <div
                    class={`${tech.class} flex items-center gap-1 py-0.5 px-3 rounded-lg`}
                  >
                    <Image
                      src={tech.img}
                      alt={tech.name}
                      width={20}
                      height={20}
                      loading="lazy"
                    />
                    <p>{tech.name}</p>
                  </div>
                );
              })}
              {linkButtons.map((button) => {
                return (
                  <a
                    href={
                      button.name === 'Preview' ? project.preview : project.code
                    }
                    target="_blank"
                    class="flex flex-row items-center gap-1 py-1 px-3 rounded-lg bg-slate-900 md:transition md:duration-200 md:ease-in-out md:hover:bg-slate-800"
                  >
                    <Image
                      src={button.src}
                      alt={button.name}
                      width={20}
                      height={20}
                      loading="lazy"
                    />
                    <p>{button.name}</p>
                  </a>
                );
              })}
            </div>
          </div>
        </>
      ))
    }

