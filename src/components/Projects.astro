---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { allProjects } from '../data/projects.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="pt-5 mb-10 flex flex-col gap-16" id="projects">
  <h2 class="font-mono text-2xl text-cyan-200 text-center lg:text-start">
    ðŸš€ {t('projects.title')}
  </h2>

  <div class="grid lg:grid-cols-3 gap-5 justify-center">
    {
      allProjects.map((project) => (
        <div class="wrapper">
          <div class="max-w-sm shadow image">
            <a href="#">
              <img class="rounded-xl" src={project.img} alt={project.name} />
              <div class="content rounded-xl">
                <h3 class="text-2xl font-semibold">{project.name}</h3>
                <div class="flex flex-row gap-5">
                  {project.tech.map((tech) => (
                    <img class="w-10" src={tech} alt="Technologies" />
                  ))}
                </div>
              </div>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .image {
    position: relative;
  }

  .content {
    position: absolute;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
    transition: 0.6s;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .content:hover {
    opacity: 1;
  }

  @media (max-width: 1280px) {
    .content {
      opacity: 0.9;
    }
  }
</style>
